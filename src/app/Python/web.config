<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <add name="HandlerPython" path="*.py" verb="*" modules="CgiModule" scriptProcessor="C:\Python27\python.exe  %s %s" resourceType="File" />
        </handlers>
        <httpProtocol>
          <customHeaders>
            <add name="Access-Control-Allow-Origin" value="*"/>
            <add name="Access-Control-Allow-Methods" value="GET,PUT,POST,DELETE,OPTIONS"/>
            <add name="Access-Control-Allow-Headers" value="Content-Type"/>
          </customHeaders>
		    </httpProtocol>
    </system.webServer>
</configuration>




